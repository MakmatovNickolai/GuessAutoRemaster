<resources>

    <style name="MenuButton">
        <item name="android:textSize">@dimen/menu_button_text_size</item>
        <item name="android:textColor">@color/greyPrimary</item>
        <item name="android:fontFamily">@font/lato_medium</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/rounded_buttom_menu</item>
        <item name="android:layout_width">@dimen/menu_button_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">@dimen/menu_button_min_height</item>
        <item name="android:layout_marginTop">@dimen/menu_button_margin_bottom</item>
        <item name="android:paddingLeft">@dimen/menu_button_left_padding</item>
        <item name="android:paddingRight">@dimen/menu_button_right_padding</item>
        <item name="android:scaleType">fitXY</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@color/black</item>
    </style>

    <style name="ButtonStyle" parent="Widget.AppCompat.ButtonBar">
        <item name="android:fontFamily">@font/lato_bold</item>
        <item name="android:textSize">@dimen/in_game_answer_button_text_size</item>
        <item name="android:textColor">@color/bluePrimary</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:background">@drawable/rounded_button_answer</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingLeft">@dimen/in_game_answer_button_padding_horizontal</item>
        <item name="android:paddingRight">@dimen/in_game_answer_button_padding_horizontal</item>
    </style>

    <style name="ToolbarTheme" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="colorControlNormal">@color/white</item>
    </style>

    <style name="HeartImageStyle">
        <item name="android:layout_width">@dimen/in_game_heart_image_size</item>
        <item name="android:layout_height">@dimen/in_game_heart_image_size</item>
        <item name="android:background">@drawable/heart_full</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.CornerSize50Percent" parent="">
        <item name="cornerSize">50%</item>
        <item name="cornerFamily">rounded</item>
    </style>

</resources>
